<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:theme="@style/lexicon_theme"
	tools:context="com.liferay.mobile.formsscreenletdemo.view.HomeActivity"
	android:orientation="vertical"
	>

	<LinearLayout
		android:id="@+id/banner_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="invisible"
		>

		<com.liferay.mobile.screens.web.WebScreenlet
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/web_screenlet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="-70dp"
			app:autoLoad="false"
			/>

		<Button
			android:id="@+id/forms_button"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginBottom="@dimen/home_button_margin_bottom"
			android:layout_marginLeft="@dimen/home_title_margin_horizontal"
			android:layout_marginRight="@dimen/home_title_margin_horizontal"
			android:text="COMPRE AGORA"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:padding="20dp"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="LIMITE DISPONÃVEL"
			android:textSize="10sp"
			android:textColor="@color/colorPrimary_lexicon"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="R$ 10.058,00"
			android:textStyle="bold"
			android:textSize="22sp"
			android:textColor="@color/colorPrimaryLight_lexicon"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SUA FATURA"
			android:textSize="10sp"
			android:textColor="@color/colorPrimary_lexicon"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:textStyle="bold"
			android:text="R$ 3.541,34"
			android:textColor="@color/colorPrimaryLight_lexicon"
			/>

	</LinearLayout>

</RelativeLayout>